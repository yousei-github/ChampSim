{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build all files",
			"command": "/usr/bin/g++", // The path of compiler
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-fopenmp",
				"-std=c++17",
				"-I", // e.g., -I dir. This means adding the directory dir to the list of directories to be searched for header files during preprocessing
				"${workspaceFolder}/inc/",
				// Below are input files (can be from multiples folders)
				"${workspaceFolder}/branch/bimodal/*.c*",
				"${workspaceFolder}/prefetcher/no/*.c*",
				"${workspaceFolder}/prefetcher/no_instr/*.c*",
				"${workspaceFolder}/replacement/lru/*.c*",
				"${workspaceFolder}/btb/basic_btb/*.c*",
				"${workspaceFolder}/src/*.c*",
				// Below is the executable file's name
				"-o",
				"${workspaceFolder}/bin/champsim"
			],
			"options": {
				"cwd": "${workspaceFolder}" // define the cwd command, such as ${fileDirname}
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}