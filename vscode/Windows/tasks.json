{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build all files",
			"command": "cl.exe", // The path of compiler
			"args": [
				"/Zi",	// Generates complete debugging information.
				"-openmp",
				//"-std=c++17",
				"/I",	// e.g., /I directory. Searches a directory for include files.
				"${workspaceFolder}\\inc\\",
				// Below are input files (can be from multiples folders)
				"${workspaceFolder}\\branch\\bimodal\\*.c*",
				"${workspaceFolder}\\prefetcher\\no\\*.c*",
				"${workspaceFolder}\\prefetcher\\no_instr\\*.c*",
				"${workspaceFolder}\\replacement\\lru\\*.c*",
				"${workspaceFolder}\\btb\\basic_btb\\*.c*",
				"${workspaceFolder}\\src\\*.c*",

				"/Fo:",	// e.g., /Fo: pathname. Specifies an object (.obj) file name or directory to be used
				"${workspaceFolder}\\output\\",
				"/Fe:",	// e.g., /Fe: pathname. Renames the executable file.
				"${workspaceFolder}\\bin\\champsim.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}" // define the cwd command, such as ${fileDirname}
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: cl.exe"
		}
	]
}